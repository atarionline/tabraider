Proc Ruch()
 IF         JOY=14 THEN PY==-1
 ELSEIF     JOY=13 THEN PY==+1
 ELSEIF     JOY=11 THEN PX==-1
 ELSEIF     JOY=7  THEN PX==+1
 FI   
 POSITION(2 ,21) PRINTB(PX)
 POSITION(12,21) PRINTB(PY)
Return

Proc Mapa()
