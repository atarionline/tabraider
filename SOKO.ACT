 CLOSE(2) Open(2,"D:MAP1.SOK",4,0)
 For Y=1 to 11
  DO
  InputSD(2,TEKST)
  POSITION(10,Y+4)
  PrintE (TEKST)
  FOR X=1 TO TEKST(0)
   DO
    IF TEKST(X)=64 THEN
    GX=X+9 GY=Y+4 EXIT
    FI
   OD
  OD
 Close(2) 
Return

PROC STI()
 DO
  JOY=stick(0)
